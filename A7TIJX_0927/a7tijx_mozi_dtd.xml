<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mozi [
    <!ELEMENT mozi (film)>
        <!ELEMENT film (rendezo+, szinesz+, iro+)*>
        <!ATTLIST film id ID #REQUIRED>
        <!ATTLIST film mufaj CDATA (horror | thriller | drama) "drama">
            <!ELEMENT rendezo (#PCDATA)>
            <!ELEMENT szinesz (#PCDATA)>
            <!ELEMENT iro (#PCDATA)>
            <!ATTLIST rendezo id ID #REQUIRED>
            <!ATTLIST rendezo nev CDATA #IMPLIED>
            <!ATTLIST szinesz id ID #REQUIRED>
            <!ATTLIST szinesz nev CDATA #IMPLIED>
            <!ATTLIST iro nev CDATA #REQUIRED>
]>

<mozi>
	<film
		id="txn_nxm_2jb"
		mufaj="horror"
	>
		<rendezo
            id="nzk_4xm_2jb"
            nev="alex"
        />
        <szinesz
            id="u5g_4xm_2jb"
            nev="Madison Ivy"      
        />
        <iro
            nev="trv_4xm_2jb"
        />		
	</film>
</mozi>